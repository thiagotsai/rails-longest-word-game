<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 text-center">
      <h2>Welcome to the longest word-game !</h2>
      <h3 style="color: grey">Here is your grid :</h3>
      <h2><strong><%= @grid.join(" ") %></strong></h2>
      <br>
      <h3>What is your best shot ?</h3>
      <form action="/score" method="post" class="form-inline">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="hidden" name="grid" value="<%= @grid.join("") %>">
        <input type="hidden" name="start_time" value="<%= Time.now %>">
        <input type="text" name="attempt" placeholder="Type your attempt" class="form-control">
        <input type="submit" value="This is it!" class="btn btn-primary">
      </form>
      <form action="/destroy">
        <button name="reset" class="btn btn-danger">Reset game</button>
      </form>
    </div>
  </div>
</div>
